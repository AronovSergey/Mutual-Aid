{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mutual-aid/enums": ["libs/enums/src/index.ts"],
      "@mutual-aid/frontend-core": ["libs/frontend-core/src/index.ts"],
      "@mutual-aid/frontend-core/constants": [
        "libs/frontend-core/constants/src/index.ts"
      ],
      "@mutual-aid/frontend-core/guards": [
        "libs/frontend-core/guards/src/index.ts"
      ],
      "@mutual-aid/frontend-core/http": [
        "libs/frontend-core/http/src/index.ts"
      ],
      "@mutual-aid/frontend-core/interceptors": [
        "libs/frontend-core/interceptors/src/index.ts"
      ],
      "@mutual-aid/frontend-core/services": [
        "libs/frontend-core/services/src/index.ts"
      ],
      "@mutual-aid/interfaces": ["libs/interfaces/src/index.ts"],
      "@mutual-aid/material": ["libs/material/src/index.ts"],
      "@mutual-aid/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
